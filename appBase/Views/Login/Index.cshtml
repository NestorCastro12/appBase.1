@model AppBase.Models.User
@{
    Layout = null;
} 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Gentelella Alela! | </title>

    <!-- Bootstrap -->
    <link href="~/Content/vendors/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- NProgress -->
    <link href="~/Content/vendors/nprogress.css" rel="stylesheet" />

    <!-- Animate.css -->
    <link href="~/Content/vendors/animate.css/animate.min.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/Content/built/custom.min.css" rel="stylesheet" />


</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form action="~/Login/Login">
                        <h1>Login</h1>
                        <div>
                            <input type="text" class="form-control" name="correo" placeholder="Correo" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" name="password" placeholder="Password" required="" />
                        </div>
                        <div>
                            <input type="submit" value="Login" class="btn btn-round btn-secondary" />
                            <a class="reset_pass" href="#">Olvidaste tu contraseña?</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                Nuevo en el sitio?
                                <a href="#signup" class="to_register"> Crea una cuenta </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
                                <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>

            <div id="register" class="animate form registration_form">
                <section class="login_content">
                    
                    <form action="~/Login/newAcc" method="post">
                        <h1>Crear cuenta</h1>

                        <div>
                            <input type="text" class="form-control" name="nombre" placeholder="Nombre" required="" />
                        </div>
                        <div>
                            <input type="email" class="form-control" name="correo" placeholder="Email" required="" />
                        </div>
                        <div>
                            <input type="password" class="form-control" name="password" placeholder="Password" required="" />
                        </div>
                        <div>
                            <input type="text" class="form-control" name="numeroDocumento" placeholder="Numero de documento" required="" />
                        </div>

                        Tipo de documento
                        <div class="btn-group">
                            <select class="btn btn-secondary dropdown-toggle" name="tipoDoc">
                                <option class="dropdown-item" value="CC"> CC </option>
                                <option class="dropdown-item" value="TI"> TI </option>
                                <option class="dropdown-item" value="RC"> RC </option>
                                <option class="dropdown-item" value="CE"> CE </option>
                                <option class="dropdown-item" value="PA"> PA </option>
                                <option class="dropdown-item" value="MS"> MS </option>
                                <option class="dropdown-item" value="AS"> AS </option>
                            </select>
                        </div>
                        <br />
                        <br />
                        <div>
                            <input type="submit" value="Registrar" class="btn btn-round btn-secondary col-md-9" />
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                Ya estás registrado ?
                                <a href="#signin" class="to_register"> Log in </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
                                <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>


    <!-- jQuery -->
    <script src="~/Scripts/vendors/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Scripts/vendors/bootstrap.bundle.min.js"></script>
    <!-- FastClick -->
    <script src="~/Scripts/vendors/fastclick.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="~/Scripts/build/custom.min.js"></script>
</body>
</html>
