@model AppBase.Models.ListUserView 
@{
    ViewBag.Title = "tableUser";
}

<div class="x_panel">
    <div class="x_title">
        <h2>Usuarios registrados <small>Gestion usuarios</small></h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th>Tipo de documento</th>
                    <th>Numero de documento</th>
                    <th>Modificar</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var p in Model.listUser)
                {
                    <tr>
                        <th scope="row">@p.id</th>
                        <td>@p.nombre</td>
                        <td>@p.correo</td>
                        <td>@p.rol</td>
                        <td>@p.tipoDocumento</td>
                        <td>@p.numeroDocumento</td>
                        <td>

                            <a class="btn btn-round btn-secondary" href="~/Home/Edit/@p.id">Editar</a>
                            <a class="btn btn-round btn-danger" href="~/Home/Delete/@p.id"> Borrar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

